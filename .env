# ===== セクターローテーションダッシュボード環境設定 =====
# ファイル: .env

# ===== データベース設定 =====
DB_HOST=postgres
DB_NAME=sector_rotation
DB_USER=admin
DB_PASSWORD=secure_password_123
DB_PORT=5432

# ===== Redis設定 =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== アプリケーション設定 =====
ENVIRONMENT=development
DEBUG=true
CACHE_EXPIRY_HOURS=1
FORCE_REFRESH=false

# ===== Yahoo Finance API設定 =====
PERIOD=1y
RS_RATIO_WINDOW=60
RS_MOMENTUM_CHANGE_PERIOD=5
RS_MOMENTUM_ROLLING_WINDOW=10
HISTORICAL_DAYS=60

# ===== セキュリティ設定 =====
# 本番環境では必ず変更してください
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===== ログ設定 =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== パフォーマンス設定 =====
WORKERS=4  # Uvicornワーカー数（CPUコア数に合わせて調整）
MAX_CONNECTIONS=100  # 最大接続数
TIMEOUT_KEEP_ALIVE=65

# ===== 開発・デバッグ用設定 =====
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# ===== データ更新設定 =====
AUTO_UPDATE_INTERVAL_HOURS=6  # 自動データ更新間隔
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=60

# ===== 外部API設定 =====
# Yahoo Finance以外のデータソースを使用する場合
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com

# ===== モニタリング設定 =====
ENABLE_METRICS=false
METRICS_PORT=9090

# ===== バックアップ設定 =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 毎日午前2時
BACKUP_RETENTION_DAYS=30

# ===== 通知設定（オプション） =====
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# ===== 本番環境専用設定 =====
# 本番環境でのみ有効にする設定
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DOMAIN_NAME=your-domain.com

# ===== 開発環境専用設定 =====
# 開発環境でのみ有効にする設定
DEV_AUTO_RELOAD=true
DEV_ENABLE_CORS=true
DEV_MOCK_DATA=false